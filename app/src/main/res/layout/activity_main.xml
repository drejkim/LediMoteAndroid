<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:id="@+id/textview_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_red" />

    <Switch android:id="@+id/switch_red"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View android:id="@+id/divider_red"
        android:layout_below="@id/switch_red"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#cccccc" />

    <TextView android:id="@+id/textview_green"
        android:layout_below="@id/divider_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_green" />

    <Switch android:id="@+id/switch_green"
        android:layout_below="@id/divider_red"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View android:id="@+id/divider_green"
        android:layout_below="@id/switch_green"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#cccccc" />

    <TextView android:id="@+id/textview_blue"
        android:layout_below="@id/divider_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_blue" />

    <Switch android:id="@+id/switch_blue"
        android:layout_below="@id/divider_green"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View android:id="@+id/divider_blue"
        android:layout_below="@id/switch_blue"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#cccccc" />

    <TextView android:id="@+id/textview_yellow"
        android:layout_below="@id/divider_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_yellow" />

    <Switch android:id="@+id/switch_yellow"
        android:layout_below="@id/divider_blue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View android:id="@+id/divider_yellow"
        android:layout_below="@id/switch_yellow"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#cccccc" />

</RelativeLayout>
